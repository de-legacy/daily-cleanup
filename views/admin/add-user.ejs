<%- include('../partials/header', {title: 'Admin: Add User', loggedIn: loggedIn, privelege: privelege})  %>

<main class="content">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 simple-form">
			<h3 class="no-mt">Tambah User</h3><!-- /.no-mt -->

			<form action="/admin/edit/<%= edit.id %>" method="POST">
				<div class="input-group">
					<label>Nama Lengkap</label>
					<input type="text" class="form-control" value="<%= edit.fullname %>" name="fullname" id="fullName">
				</div>

				<div class="input-group">
					<label>No. Handphone</label>
					<input type="tel" class="form-control" value="<%= edit.phone %>" name="phone" id="phoneNumber">
				</div>

				<div class="input-group">
					<label>Email</label>
					<input type="email" class="form-control" value="<%= edit.email %>" name="email" id="email">
				</div>

				<div class="input-group">
					<label>Alamat</label>
					<textarea class="form-control" name="address" value="<%= edit.address %>" id="address" cols="30" rows="10"></textarea>
				</div>

				<div class="input-group">
					<label>Username</label>
					<input type="text" class="form-control" value="<%= edit.username %>" name="username" id="username">
				</div>

				<div class="input-group">
					<label>Password</label>
					<input type="password" class="form-control" value="<%= edit.password %>" name="password" id="password">
				</div>

				<div class="input-group">
					<label>Privelege</label>
					<input type="text" class="form-control" value="<%= edit.privelege %>" name="privelege" id="privelege">
				</div>

				<div class="row">
					<div class="col-md-6">
						<input class="btn btn-info" type="submit" value="Daftar" />
					</div><!-- /.col-md-6 -->
				</div><!-- /.ta-right -->
			</form>
		</div><!-- /.col-md-12 -->
	</div><!-- /.row -->
</main>

<%- include('../partials/footer') %>