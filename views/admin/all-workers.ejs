<%- include('../partials/header', {title: 'Admin: All Workers'})  %>

<main class="content">
	<div class="row">
		<div class="col-md-12">

			<table class="table">
				<thead>
					<tr>
						<th>Nama Worker</th>
						<th>No. Telephone</th>
						<th>Email</th>
						<th>Rating</th>
						<th>Action</th>
					</tr>
				</thead>

				<tbody>
				<% allWorkers.forEach( function(worker, index) { %>
					<tr>
						<td><%= worker.fullname %></td>
						<td><%= worker.phone %></td>
						<td><%= worker.email %></td>
						<td>
							<div class="rating-star">
								<%- Helper.getStars(worker.averagerating); %>
							</div><!-- /.rating-star -->
						</td>
						<td>
							<a href="/test/admin/workers/edit/<%= worker.id %>">Edit</a>
							<a href="/test/admin/workers/delete/<%= worker.id %>">Delete</a>
						</td>
					</tr>
				<% }); %>
				</tbody>
			</table>
			<a href="/test/admin/workers/add" class="btn btn-info">Add Worker</a>

		</div><!-- /.col-md-12 -->
	</div><!-- /.row -->
</main><!-- /.content -->

<%- include('../partials/footer') %>