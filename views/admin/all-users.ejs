<%- include('../partials/header', {title: 'Admin: All Users', loggedIn: loggedIn, privelege: privelege})  %>

<main class="content">
	<div class="row">
		<div class="col-md-12">
			<h3 class="no-mt">All Users</h3>

			<table class="table">
				<thead>
					<tr>
						<th>Nama Lengkap</th>
						<th>No. Telephone</th>
						<th>Email</th>
						<th>Alamat</th>
						<th>Username</th>
						<th>Permission</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% allUser.forEach( function(user, index) { %>
						<tr>
							<td><%= user.fullname %></td>
							<td><%= user.phone %></td>
							<td><%= user.email %></td>
							<td><%= user.address %></td>
							<td><%= user.username %></td>
							<td><%= user.privelege %></td>
							<td>
								<a href="/admin/edit/<%= user.id %>">Edit</a>
								<a href="/admin/delete/<%= user.id %>">Delete</a>
							</td>
						</tr>
					<% }); %>
				</tbody>
			</table>
		</div><!-- /.col-md-12 -->
	</div><!-- /.row -->
</main><!-- /.content -->

<%- include('../partials/footer') %>